<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/bg_style_1"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/home_item_lv_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_author"/>
        <TextView
            android:id="@+id/home_item_lv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/common_black"
            android:gravity="center|left"
            android:text="title"
            android:textSize="@dimen/text_less_mid"
            android:padding="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/home_item_lv_author"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/common_gray"
            android:gravity="top|left"
            android:text="作者："
            android:textSize="@dimen/text_little"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/home_item_lv_type"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/common_gray"
            android:gravity="top|left"
            android:text="分类："
            android:textSize="@dimen/text_little"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/home_item_lv_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/common_gray"
            android:gravity="top|left"
            android:text="时间："
            android:textSize="@dimen/text_little"
            android:padding="5dp"/>
    </LinearLayout>

</LinearLayout>
